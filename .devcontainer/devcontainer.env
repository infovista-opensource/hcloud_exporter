# Environment variables for the hcloud_exporter development container
# You can modify these as needed for your development environment

# Hetzner Cloud API token (replace with your token or leave empty for testing)
HCLOUD_TOKEN=

# Exporter configuration
HCLOUD_LOG_LEVEL=debug
HCLOUD_LOG_PRETTY=true
HCLOUD_WEB_ADDRESS=0.0.0.0:9501
HCLOUD_WEB_PATH=/metrics
HCLOUD_REQUEST_TIMEOUT=5s
HCLOUD_SERVER_ENABLED=true
HCLOUD_IMAGE_ENABLED=true
HCLOUD_VOLUME_ENABLED=true
HCLOUD_FLOATINGIP_ENABLED=true
HCLOUD_SSHKEY_ENABLED=true
